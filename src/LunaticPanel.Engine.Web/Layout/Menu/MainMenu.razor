@if (!ViewModel.Loading)
{
    <MudGrid>
        @if (ViewModel.State.MenuElements.Count > 0)
        {


            @foreach (var menuElement in ViewModel.State.MenuElements)
            {
                @if (menuElement.VisibilityCondition?.Invoke() ?? true)
                {
                    <MudItem xs="12">
                        @if(menuElement.Render != default)
                        {
                            @menuElement.Render
                        }
                        else
                        {
                            <DynamicComponent Type=@menuElement.ComponentType Parameters=@TypeComponentParameters />
                        }
                    </MudItem>
                }
            }
        }
        else
        {

            <MudItem xs="12" Class="ma-3">
                <MudAlert Severity="Severity.Warning">
                    No Menu Available
                </MudAlert>
            </MudItem>
        }
    </MudGrid>


}
else
{
    <MudProgressLinear Color="Color.Secondary" Indeterminate="true" Class="my-7" />
}


